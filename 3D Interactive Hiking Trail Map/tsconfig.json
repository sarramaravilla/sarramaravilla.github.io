{
    "compilerOptions": {
      "module": "amd",
      "noImplicitAny": true,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "target": "es5",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "ignoreDeprecations": "5.0"
    },
    "include": [
      "./app/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }